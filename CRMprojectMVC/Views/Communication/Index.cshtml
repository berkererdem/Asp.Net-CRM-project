@model IEnumerable<CRMprojectMVC.Models.CommunicationHistory>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="container mt-5">
    @Html.ActionLink("Create", "Create", "Communication", null, new { @class = "btn btn-primary" })
</div>

<div class="container mt-5">
    @Html.Grid(Model).Columns(column =>
{
    column.Add(m => m.CommID).Titled("ID").Sortable(true).Filterable(true);
    column.Add(m => m.CommType).Titled("Type").Sortable(true).Filterable(true);
    column.Add(m => m.CommDate).Titled("Date").Sortable(true).Filterable(true);
    column.Add(m => m.CommSubject).Titled("Subject").Sortable(true).Filterable(true);
    column.Add(m => m.CommContent).Titled("Content").Sortable(true).Filterable(true);
    column.Add(m => m.CommStatus).Titled("Status").Sortable(true).Filterable(true);
    

    column.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Update", "Update", "Communication", new { id = o.CommID }, new { @class = "btn btn-success" }));

    column.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Delete", "Delete", "Communication", new { id = o.CommID}, new { @class = "btn btn-danger" }));


})


