@model IEnumerable<CRMprojectMVC.Models.Customers>
@using GridMvc.Html

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="container mt-5">
    @Html.ActionLink("Create", "Create", "Customer", null, new { @class = "btn btn-primary" })
</div>

<div class="container mt-5">

    @Html.Grid(Model).Columns(column =>
{


    column.Add(m => m.customerID).Titled("ID").Sortable(true).Filterable(true);
    column.Add(m => m.customerName).Titled("Name").Sortable(true).Filterable(true);
    column.Add(m => m.customerSurname).Titled("Surname").Sortable(true).Filterable(true);
    column.Add(m => m.customerMail).Titled("Mail").Sortable(true).Filterable(true);
    column.Add(m => m.customerPhone).Titled("Phone").Sortable(true).Filterable(true);
    column.Add(m => m.customerAddress).Titled("Address").Sortable(true).Filterable(true);
    column.Add(m => m.customerCity).Titled("City").Sortable(true).Filterable(true);
    column.Add(m => m.customerCountry).Titled("Country").Sortable(true).Filterable(true);

    column.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Update", "Update", "Customer", new { id = o.customerID}, new { @class = "btn btn-success" }));

    column.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Delete", "Delete", "Customer", new { id = o.customerID }, new { @class = "btn btn-danger" }));



})


</div>


