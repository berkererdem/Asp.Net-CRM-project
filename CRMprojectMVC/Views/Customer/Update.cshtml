@model CRMprojectMVC.Models.Customers
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="container mt-5">
    @using (Html.BeginForm("Update", "Customer", FormMethod.Post, new { @class = "row g-3" }))
    {
        <input type="hidden" value="@Model.customerID" name="id" />
        <div class="col-12">
            <label for="customerName" class="form-label">Name</label>
            <input type="text" class="form-control" id="customerName" name="customerName" value="@Model.customerName" />
        </div>

        <div class="col-12">
            <label for="customerSurname" class="form-label">Surname</label>
            <input type="text" class="form-control" id="customerSurname" name="customerSurname" value="@Model.customerSurname" />
        </div>

        <div class="col-12">
            <label for="customerMail" class="form-label">Mail</label>
            <input type="text" class="form-control" id="customerMail" name="customerMail" value="@Model.customerMail" />
        </div>

        <div class="col-12">
            <label for="customerPhone" class="form-label">Phone</label>
            <input type="text" class="form-control" id="customerPhone" name="customerPhone" value="@Model.customerPhone" />
        </div>

        <div class="col-12">
            <label for="customerAddress" class="form-label">Address</label>
            <input type="text" class="form-control" id="customerAddress" name="customerAddress" value="@Model.customerAddress" />
        </div>

        <div class="col-12">
            <label for="customerCity" class="form-label">City</label>
            <input type="text" class="form-control" id="customerCity" name="customerCity" value="@Model.customerCity" />
        </div>

        <div class="col-12">
            <label for="customerCountry" class="form-label">Country</label>
            <input type="text" class="form-control" id="customerCountry" name="customerCountry" value="@Model.customerCountry" />
        </div>

        <div class="col-12">
            <label for="customerPostalCode" class="form-label">Postal Code</label>
            <input type="text" class="form-control" id="customerPostalCode" name="customerPostalCode" value="@Model.customerPostalCode" />
        </div>

        <div class="col-12">
            <label for="customerCreationDate" class="form-label">Creation Date</label>
            <input type="text" class="form-control" id="customerCreationDate" name="customerCreationDate" value="@Model.customerCreationDate" />
        </div>

        <div class="col-12">
            <label for="customerUpdateDate" class="form-label">Update Date</label>
            <input type="text" class="form-control" id="customerUpdateDate" name="customerUpdateDate" value="@Model.customerUpdateDate" />
        </div>



        <div class="col-12">
            <button class="btn btn-success" type="submit">Update</button>
        </div>

    }

</div>


