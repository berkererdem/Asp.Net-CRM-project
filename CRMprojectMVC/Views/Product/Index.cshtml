@model IEnumerable<CRMprojectMVC.Models.Products>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-5">
    @Html.ActionLink("Create", "Create", "Product", null, new { @class = "btn btn-primary" })
</div>

<div class="container mt-5">
    @Html.Grid(Model).Columns(column =>
{
    column.Add(m => m.productID).Titled("ID").Sortable(true).Filterable(true);
    column.Add(m => m.productName).Titled("Name").Sortable(true).Filterable(true);
    column.Add(m => m.productDescription).Titled("Description").Sortable(true).Filterable(true);
    column.Add(m => m.productCategory).Titled("Status").Sortable(true).Filterable(true);
    column.Add(m => m.productPrice).Titled("Start Date").Sortable(true).Filterable(true);
    column.Add(m => m.productStockQuantity).Titled("End Date").Sortable(true).Filterable(true);
    column.Add(m => m.productCreationDate).Titled("End Date").Sortable(true).Filterable(true);
    column.Add(m => m.productUpdateDate).Titled("End Date").Sortable(true).Filterable(true);


    column.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Update", "Update", "Product", new { id = o.productID}, new { @class = "btn btn-success" }));

    column.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Delete", "Delete", "Product", new { id = o.productID}, new { @class = "btn btn-danger" }));


})

