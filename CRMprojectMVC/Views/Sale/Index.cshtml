@model IEnumerable<CRMprojectMVC.Models.Sales>
@using GridMvc.Html

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-5">
    @Html.ActionLink("Create", "Create", "Sale", null, new { @class = "btn btn-primary" })
</div>

<div class="container mt-5">
    @Html.Grid(Model).Columns(column =>
{
    column.Add(m => m.saleID).Titled("ID").Sortable(true).Filterable(true);
    column.Add(m => m.saleDate).Titled("Date").Sortable(true).Filterable(true);
    column.Add(m => m.saleQuantity).Titled("Quantity").Sortable(true).Filterable(true);
    column.Add(m => m.saleUnitPrice).Titled("Unit Price").Sortable(true).Filterable(true);
    column.Add(m => m.saleDiscountRate).Titled("Discount Rate").Sortable(true).Filterable(true);
    column.Add(m => m.saleCustomerID).Titled("Customer ID").Sortable(true).Filterable(true);
    column.Add(m => m.saleProductID).Titled("Product ID").Sortable(true).Filterable(true);

    column.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Update", "Update", "Sale", new { id = o.saleID }, new { @class = "btn btn-success" }));

    column.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Delete", "Delete", "Sale", new { id = o.saleID }, new { @class = "btn btn-danger" }));


})


