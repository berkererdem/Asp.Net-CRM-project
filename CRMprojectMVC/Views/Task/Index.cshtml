@model IEnumerable<CRMprojectMVC.Models.Tasks>
@using GridMvc.Html

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-5">
    @Html.ActionLink("Create", "Create", "Task", null, new { @class = "btn btn-primary" })
</div>

<div class="container mt-5">
    @Html.Grid(Model).Columns(column =>
{
    column.Add(m => m.taskID).Titled("ID").Sortable(true).Filterable(true);
    column.Add(m => m.taskName).Titled("Name").Sortable(true).Filterable(true);
    column.Add(m => m.taskDescription).Titled("Description").Sortable(true).Filterable(true);
    column.Add(m => m.taskStatus).Titled("Status").Sortable(true).Filterable(true);
    column.Add(m => m.taskStartDate).Titled("Start Date").Sortable(true).Filterable(true);
    column.Add(m => m.taskEndDate).Titled("End Date").Sortable(true).Filterable(true);

    column.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Update", "Update", "Task", new { id = o.taskID }, new { @class = "btn btn-success" }));

    column.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Delete", "Delete", "Task", new { id = o.taskID }, new { @class = "btn btn-danger" }));


})


</div>

