
@model IEnumerable<CRMprojectMVC.Models.Users>
@using GridMvc.Html

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-5">
    @Html.ActionLink("Create", "Create", "User", null, new { @class = "btn btn-primary" })
</div>

<div class="container mt-5">
     
    @Html.Grid(Model).Columns(column =>
{


    column.Add(m => m.userID).Titled("ID").Sortable(true).Filterable(true);
    column.Add(m => m.userName).Titled("Name").Sortable(true).Filterable(true);
    column.Add(m => m.userSurname).Titled("Surname").Sortable(true).Filterable(true);
    column.Add(m => m.userMail).Titled("Mail").Sortable(true).Filterable(true);
    column.Add(m => m.userRole).Titled("Role").Sortable(true).Filterable(true);
    column.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Update", "Update", "User", new { id = o.userID }, new { @class = "btn btn-success" }));

    column.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Delete", "Delete", "User", new { id = o.userID }, new { @class = "btn btn-danger" }));



})


</div>

